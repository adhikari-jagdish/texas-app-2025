<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JSONExampleActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="30sp"
        android:text="JSON Example"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:id="@+id/tv_jsonexample_title"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_jsonexample_title"
        android:text="Fetch Data"
        android:id="@+id/btn_jsonexample_fetch_data"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_jsonexample_data"
        app:layout_constraintTop_toBottomOf="@id/btn_jsonexample_fetch_data"
        android:layout_marginTop="30dp"
        android:textSize="20sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>